{
    "name": "qr-barcode-batch-app",
    "version": "1.0.0",
    "description": "批量二维码/条形码生成器（Electron + React + AntD）",
    "main": "electron/main.js",
    "scripts": {
        "dev:renderer": "vite",
        "dev:electron": "wait-on http://localhost:5173 && electron .",
        "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
        "build:renderer": "vite build",
        "build": "npm run build:renderer",
        "start": "electron .",
        "dist": "npm run build && electron-builder --win --x64"
    },
    "build": {
        "appId": "com.example.qrbarcode",
        "productName": "QRBarcodeBatch",
        "files": [
            "dist/**/*",
            "electron/**/*",
            "package.json",
            "node_modules/**/*"
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "assets/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true
        }
    },
    "dependencies": {
        "antd": "^5.10.0",
        "bwip-js": "^2.0.9",
        "electron-is-dev": "^2.0.0",
        "html2canvas": "^1.4.1",
        "jsbarcode": "^3.11.5",
        "jspdf": "^3.0.3",
        "pdfkit": "^0.13.0",
        "qr-code-styling": "^1.9.2",
        "qrcode": "^1.5.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.0.0",
        "concurrently": "^8.0.1",
        "electron": "^26.0.0",
        "electron-builder": "^24.6.0",
        "vite": "^5.2.0",
        "wait-on": "^7.0.1"
    }
}
